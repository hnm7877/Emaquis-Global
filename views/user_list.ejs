  <script>
    const btns = $('.action_btn');
    const confirmBtns = $('.confirm_action_btn');

    const buttonClick = (name, id) => {

      let user_name = '';
      let user_id = '';
      if (name !== 'string' && typeof id !== 'string') {
        user_name = $(this).attr('data-username');
        user_id = $(this).attr('data-userId');
      } else {
        user_name = name;
        user_id = id;
      }

      if (!user_name || !user_id) return;

      $('#user_delete_name').text(user_name);
      $('#user_delete_id').val(user_id);
    }

    const confirmButtonClick = (name, id) => {
      let user_name = '';
      let user_id = '';
      if (name !== 'string' && typeof id !== 'string') {
        user_name = $(this).attr('data-username');
        user_id = $(this).attr('data-userId');
      } else {
        user_name = name;
        user_id = id;
      }

      $('#confirmer_user_delete_name').text(user_name);
      $('#confirmer_user_delete_id').val(user_id);
    }

