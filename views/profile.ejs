    }
    .lock-icon.lock-green {
      color: #98ED58;
      background: rgba(152, 237, 88, 0.13);
    }
    .lock-icon.lock-orange:hover {
      background: #FFA500;
      color: #fff;
    }
    .lock-icon.lock-green:hover {
      background: #98ED58;
      color: #fff;
    }
    .checkbox-disabled {
      opacity: 0.5;
