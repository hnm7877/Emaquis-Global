	<body class="crm_body_bg">
		<style>
			.sidebar .logo .large_logo img {
				width: 70%;
				margin-left: 15%;
			}
			#status_btnn {
				display: inline-block;
				padding: 2px 15px;
				font-size: 11px;
				font-weight: 300;
				color: #fff !important;
				background: #ff9409;
				-webkit-border-radius: 30px;
				-moz-border-radius: 30px;
				border-radius: 30px;
				text-transform: capitalize;
				white-space: nowrap;
				min-width: 70px;
				text-align: center;
			}
			.lms_checkbox_1 input:checked + .slider-check:before {
				transform: translateX(20px);
				background: #2eec1c;
			}

			.venteRed td {
				color: rgb(219, 36, 23) !important;
			}

			.venteGreen {
				color: rgb(0, 128, 0) !important;
			}

			.venteOrange {
				color: rgb(255, 165, 0) !important;
			}

			/* Modern Table Styles */
			.table {
				border-radius: 10px;
				overflow: hidden;
				box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
			}

			.table thead th {
				background: #2c3e50;
				color: white;
				font-weight: 500;
				padding: 15px;
				text-transform: uppercase;
				font-size: 0.85rem;
				letter-spacing: 0.5px;
			}

			.table tbody tr {
				transition: all 0.3s ease;
			}

			.table tbody tr:hover {
				background-color: #f8f9fa;
				transform: scale(1.01);
			}

			.table td {
				padding: 15px;
				vertical-align: middle;
			}

			/* Status Badge Styles */
			.status-badge {
				padding: 6px 12px;
				border-radius: 20px;
				font-size: 0.85rem;
				font-weight: 500;
				display: inline-block;
				text-align: center;
				min-width: 100px;
			}

			.status-validated {
				background-color: #2ecc71;
				color: white;
			}

			.status-cancelled {
				background-color: #e74c3c;
				color: white;
			}

			.status-pending {
				background-color: #f1c40f;
				color: white;
			}

			.status-offered {
				background-color: #3498db;
				color: white;
			}

			/* Column Icons */
			.column-icon {
				margin-right: 8px;
				color: #2c3e50;
			}

			/* Price Styles */
			.price-positive {
				color: #2ecc71;
				font-weight: 600;
			}

			.price-negative {
				color: #e74c3c;
				font-weight: 600;
			}

			/* Header Styles */
			.white_card_header {
				background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
				color: white;
				padding: 20px;
				border-radius: 10px 10px 0 0;
			}

			.main-title h3 {
				color: white;
				font-weight: 600;
				margin: 0;
			}

			/* Search Box Enhancement */
			.search-box {
				border-radius: 20px;
				padding: 10px 20px;
				border: 1px solid #e0e0e0;
				box-shadow: 0 2px 5px rgba(0,0,0,0.1);
				transition: all 0.3s ease;
			}

			.search-box:focus {
				border-color: #3498db;
				box-shadow: 0 2px 10px rgba(52,152,219,0.2);
			}

			/* Footer Enhancement */
			.footer_part {
				background: #2c3e50;
				color: white;
				padding: 20px 0;
			}

			.footer_iner a {
				color: #3498db;
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.footer_iner a:hover {
				color: #2980b9;
			}
		</style>

		<section class="main_content dashboard_part large_header_bg">
			<!-- menu  -->

			<div class="main_content_iner">
				<div class="container-fluid p-0">
					<div class="row justify-content-center">
						<div class="col-lg-12">
							<div class="white_card card_height_100 mb_30">
								<div class="white_card_header">
									<div class="box_header m-0">
										<div class="main-title">
											<h3 class="m-0"><i class="fas fa-chart-line me-2"></i>Liste des ventes</h3>
										</div>
									</div>
								</div>
								<div class="white_card_body">
									<div class="QA_section">
										<div class="white_box_tittle list_header">
											<%- include('partial/inputSearch.ejs') %>
										</div>

										<div class="QA_table mb_30">
											<!-- table-responsive -->
											<table class="table lms_table_active3" data-order='[[7, "desc"]]'>
												<thead>
													<tr>
														<th scope="col"><i class="fas fa-barcode column-icon"></i>Code</th>
														<th scope="col"><i class="fas fa-box column-icon"></i>Produit</th>
														<th scope="col"><i class="fas fa-tags column-icon"></i>Categories</th>
														<th scope="col"><i class="fas fa-user column-icon"></i>Vendeur / Vendeuse</th>
														<th scope="col"><i class="fas fa-sort-numeric-up column-icon"></i>Quantité</th>
														<th scope="col"><i class="fas fa-money-bill-wave column-icon"></i>Prix</th>
														<th scope="col"><i class="fas fa-info-circle column-icon"></i>Status</th>
														<th scope="col"><i class="fas fa-calendar-alt column-icon"></i>Date</th>
													</tr>
												</thead>
												<tbody>
													<% for(let vente of ventes) {%>
													<tr class="<%=vente.prix<0 || vente.status_commande == "Annulée" ?'venteRed': '' %>">
														<td><%= vente.code %></td>
														<td><%= vente.produit %></td>
														<td><%= vente.categories%></td>

														<td><%= vente.employe%></td>

														<td><%= vente.quantite%></td>

														<td class="<%= vente.prix >= 0 ? 'price-positive' : 'price-negative' %>">
															<%= vente.prix%> F
														</td>
														<td>
															<span class="status-badge <%= 
																vente.status_commande === "Validée" ? 'status-validated' :
																vente.status_commande === "Annulée" ? 'status-cancelled' :
																vente.offered && vente.status_commande === "Offert" ? 'status-offered' :
																'status-pending'
															%>">
																<%= vente.offered && vente.status_commande == "Annulée" ? "Offert" : vente.status_commande %>
															</span>
														</td>
												
														<td data-order="<%= vente.createdAt %>">
															<i class="far fa-clock me-2"></i><%= new Date(vente.createdAt).toLocaleString('fr-Fr') %>
														</td>
													</tr>
													<% } %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="footer_part">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<div class="footer_iner text-center">
								<p>
									2023 © HNM - Designed by
									<a href="#"> <i class="fas fa-rocket"></i> </a><a href="#"> HNM</a> -
									<a href="/faq">FAQ</a>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
