<% if (!locals.forProfile && user.forEvent && (!user.paid ||
!locals.expiredDate)) { %> <%- include('../modal.ejs') %> <% } %>

<script>
  const expiredPaymentDate = <%- JSON.stringify(user.expiredPaymentDate) %>;
  const expiredDate = new Date(expiredPaymentDate) < new Date()


  if(!expiredDate){
    let timeId = setInterval(()=>{
     const expiredDate = new Date(expiredPaymentDate) < new Date();

   if(expiredDate){
     clearInterval(timeId);
   window.location.reload();
   }
   }, 1000);
  }

  document.addEventListener('DOMContentLoaded', function() {
    // Expansion/collapse anim√©e des sous-menus
    document.querySelectorAll('.sidebar-toggle').forEach(function(toggle) {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        const parent = this.closest('.sidebar-menu-item');
        const submenu = parent.querySelector('.sidebar-submenu');
        if (submenu) {
          if (submenu.style.maxHeight) {
            submenu.style.maxHeight = null;
            submenu.style.opacity = 0;
            parent.classList.remove('open');
          } else {
            // Fermer les autres sous-menus
            document.querySelectorAll('.sidebar-menu-item.open .sidebar-submenu').forEach(function(other) {
              other.style.maxHeight = null;
              other.style.opacity = 0;
              other.closest('.sidebar-menu-item').classList.remove('open');
            });
            submenu.style.maxHeight = submenu.scrollHeight + 'px';
            submenu.style.opacity = 1;
            parent.classList.add('open');
          }
        }
      });
    });
    // Par d√©faut, fermer tous les sous-menus
    document.querySelectorAll('.sidebar-submenu').forEach(function(sub) {
      sub.style.maxHeight = null;
      sub.style.opacity = 0;
    });
  });
</script>

