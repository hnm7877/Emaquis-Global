    padding: 0.7rem 2.2rem 0.7rem 1.2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    min-height: 64px;
    position: relative;
    z-index: 10;
  }
  .main-navbar-pro .navbar-left {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }
  .main-navbar-pro .navbar-icon {
    font-size: 2.1rem;
    color: #fff;
    background: rgba(255, 255, 255, 0.13);
    border-radius: 50%;
    padding: 0.5rem;
    margin-right: 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(44, 62, 80, 0.1);
  }
  .main-navbar-pro .navbar-title {
    font-size: 1.45rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    margin: 0;
    color: #fff;
  }
  .main-navbar-pro .navbar-user {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    font-size: 1.08rem;
    font-weight: 500;
  }
  .main-navbar-pro .navbar-user .user-role {
    font-size: 0.98rem;
    color: #e0eaf6;
    margin-left: 0.5rem;
    font-weight: 400;
  }
  .navbar-user button span,
  .navbar-user .user-role {
    color: #fff !important;
