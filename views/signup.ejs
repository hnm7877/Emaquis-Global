==============================-->

    <section class="section ">
      <div class=" container col-lg-7 col-md-12 col-sm-4 m-auto m-md-auto m-lg-auto m-sm-auto">
        <div class="row overflow-auto">
          <div>
            <div class="block col-lg-12 col-md-7 col-sm-4">
              <div class="content text-center bg-singup p-4 col-lg-8 col-md-7">
                <div class="logo" data-aos="zoom-in" data-aos-duration="3000">
                  <a href="/"
                    ><img
                      class="img-incription"
                      src="../img/_logo_.png"
                      alt="logo Emaquis"
                  /></a>
                </div>
                <div class="title-text">
                  <h3>Inscrivez vous !</h3>
                </div>
                <div
                  class="alert alert-success"
                  role="alert"
                  style="text-align: center; display: none"
                  id="alert-success"
                >
                  L'opération s'est terminée avec succès !
                </div>
                <div
                  class="alert alert-danger"
                  role="alert"
                  style="text-align: center; display: none"
                  id="alert-danger"
                >
                  Echec de l'opération, nom de l'établissement ou email déjà
                  utilisé!
                </div>
                <form action="#" class="mb-6 ">
                  <input
                    class="form-control main"
                    type="text"
                    placeholder="nom d'utilisateur "
                    name="username"
                    required
                  />

                  <input
                    class="form-control main"
                    type="text"
                    placeholder="nom de l'établissement "
                    name="nom_etablissement"
                    required
                  />

                  <input
                    class="form-control main"
                    type="email"
                    placeholder="email"
                    name="email"
                    required
                  />

                  <input
                    class="form-control main"
                    type="text"
                    placeholder="adresse"
                    name="adresse"
                    required
                  />
                  <input
                    class="form-control main"
                    type="number"
                    placeholder="numéro"
                    name="numero"
                    required
                  />

                  <input
                    class="form-control main"
                    type="password"
                    placeholder="mot de passe"
                    name="password"
                    required
                  />

                  <button
                    type="submit"
                    class="btn btn-main-sm btn-lg p-3"
                    id="btn-validate"
                  >
                    valider
                  </button>
                </form>
                <div class="new-acount">
                  <p>
                    En cliquant sur "S'inscrire", j'accepte
                    <a href="/condition_general" style="text-decoration: none"
                      >Conditions d'utilisation.</a
                    >
                  </p>
                  <p>
                    Avez-vous un compte ?
                    <a href="/connexion" style="text-decoration: none"
                      >connectez-vous</a
                    >
                  </p>
                </div>
              </div>
